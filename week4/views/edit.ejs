<%- include("./partials/header") %>
<div class="container">



    <div class="panel panel-default pb-4 border rounded my-3 pl-3 pr-3 pt-3">
        <div class="panel-body pb-2">
            <span class="font-weight-bold text-capitalize text-large"><%= cohort.name%></span>
        </div>
        <div class="panel-body pb-2"><%= cohort.members%></div>

        <div class="panel-body border"></div>

        <div class="panel-body">

            <form action="<%=cohort.id %>" method="post">
                <input type="hidden" value="PATCH" name="_method">
                <!-- <form action=`cohorts\:${id}` method="get"> -->
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="assignmethod" value="teamcount">
                    <label class="form-check-label" for="assignmethod">
                        Team Count
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="assignmethod" value="numberperteam">
                    <label class="form-check-label" for="assignmethod">
                        Number Per Team
                    </label>
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <input type="text" class="form-control" name="quantity" required>
                </div>


                <button type="hidden" value="Update" class="btn btn-primary my-1">Update Team</button>
                <button type="hidden" value="Delete" class="btn btn-primary my-1">Delete Team</button>


            </form>

        </div>




    </div>
</div>
<%- include("./partials/footer") %>