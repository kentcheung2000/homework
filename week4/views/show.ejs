<%- include("partials/header")%>

<div class="container">
    <div class="panel panel-default pb-4 border rounded my-3 pl-3 pr-3 pt-3">

        <div class="panel-body pb-2">
            <span class="font-weight-bold text-capitalize text-large"><%= cohort.name%></span>
        </div>
        <div class="panel-body pb-2"><%= cohort.members%></div>

        <div class="panel-body border"></div>

        <div class="panel-body">

            <form action="/show" method="POST">
                <div class="form-check">
                    <!-- <input class="form-check-input" type="radio" name="assignMethodRadios" id="teamCount"
                        value="option1" checked> -->
                    <input class="form-check-input" type="radio" name="teamcount" value="option1">
                    <label class="form-check-label" for="teamcount">
                        Team Count
                    </label>
                </div>
                <div class="form-check">
                    <!-- <input class="form-check-input" type="radio" name="assignMethodRadios" id="numberPerTeam"
                        value="option2"> -->
                    <input class="form-check-input" type="radio" name="numberperteam" value="option2">
                    <label class="form-check-label" for="numberperteam">
                        Number Per Team
                    </label>
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <!-- <input type="text" class="form-control" id="formGroupExampleInput"> -->
                    <input type="text" class="form-control" name="quantity">
                </div>

                <button type="submit" class="btn btn-primary my-1">Assign Teams</button>

            </form>

        </div>


    </div>
</div>






<%- include("partials/footer")%>