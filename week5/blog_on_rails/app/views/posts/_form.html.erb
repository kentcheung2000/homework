

<% if @post.errors.any? %>
<ul>
    <% @post.errors.full_messages.each do |msg|%>
    <li><%=msg%></li>
    <% end %>
</ul>

<%end%>



<%= form_with model: @post, local: true do |f| %>


<div class="form-group">
    <div>
        <%= f.label :title %>
    </div>

    <div>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :body %>
        <%= f.text_area(:body, cols: 50, rows: 5, class: "form-control") %>
    </div>

</div>

<div class="btn btn-primary  mr-3">
    <%= f.submit "Submit", :class => "btn" %>
</div>
<% end %>